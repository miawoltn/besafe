<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/navcolorPrimary"
    tools:context="com.miawoltn.emergencydispatch.setup.InstructionsActivityFragment"
    tools:showIn="@layout/activity_instructions">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:text="Be Safe \n First time install"
        android:textColor="@color/background"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_above="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp" />

    <Button
        android:text="Continue"
        android:layout_height="wrap_content"
        android:id="@+id/continueButton"
        android:background="@color/background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <TextView
        android:text="@string/disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:id="@+id/textView15"
        android:textColor="@color/navcolorAccent"
        android:layout_above="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />
</RelativeLayout>
